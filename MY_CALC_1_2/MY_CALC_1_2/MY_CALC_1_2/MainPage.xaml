<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MY_CALC_1_2.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="MyCalc version 1.2" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label Text="Primer Número" HorizontalOptions="CenterAndExpand" FontSize="20" />
        <Entry Placeholder="Digite número" x:Name="num1"/>
        <Label Text="Segundo Número" HorizontalOptions="CenterAndExpand" FontSize="20" />
        <Entry Placeholder="Digite número" x:Name="num2" />
        <Picker Title="Opciones" x:Name="Seleccionar_operacion" 
                SelectedIndexChanged="OpcionOperacion" />
        <Label Text="Resultado"  HorizontalOptions="CenterAndExpand" FontSize="20" x:Name="resultado"/>


    </StackLayout>

</ContentPage>
